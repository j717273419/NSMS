@{
    ViewBag.Title = "编辑分类";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- 面板 -->
<div class="panel panel-primary">
    <!-- 面板标题 -->
    <div class="panel-heading">
        <h3 class="panel-title">编辑分类</h3>
    </div>
    <!-- 面板体 -->
    <div class="panel-body">
        @using (Html.BeginForm("Add", "Category", FormMethod.Post, new { role = "form" }))
        {
            <div class="form-group">
                <label for="belCategory">所属分类:</label>
                <select id="belCategory" class="form-control">
                    <option>新建</option>
                </select>
            </div>
            <div class="form-group">
                <label for="categoryName">分类名称:</label>
                <input id="categoryName" type="text" class="form-control" placeholder="名称" />
            </div>
            <div class="form-group">
                <label for="suggestUrl">建议URL:</label>
                <input id="suggestUrl" type="text" class="form-control" placeholder="android_view" />
            </div>
            <div class="form-group">
                <label for="fileUp">微缩图:</label>
                <input type="file" id="fileUp" class="form-control" />
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary btn-lg">保存</button>
                <a href="@Url.Action("List")" class="btn btn-danger btn-lg">取消</a>
            </div>
        }
    </div>
</div>
